<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/app_navigation"
            app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="sanchez.sanchez.sergio.agrociety.ui.features.intro.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment"
            app:enterAnim="@anim/anim_in"
            app:exitAnim="@anim/anim_out"
            app:popEnterAnim="@anim/anim_in"
            app:popExitAnim="@anim/anim_out" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment"
            app:enterAnim="@anim/anim_in"
            app:exitAnim="@anim/anim_out"
            app:popEnterAnim="@anim/anim_in"
            app:popExitAnim="@anim/anim_out" />
        <action
            android:id="@+id/action_loginFragment_to_setLocationFragment"
            app:destination="@id/setLocationFragment"
            app:enterAnim="@anim/anim_in"
            app:exitAnim="@anim/anim_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_in"
            app:popExitAnim="@anim/anim_out"
            app:popUpTo="@+id/app_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="sanchez.sanchez.sergio.agrociety.ui.features.intro.resetpassword.ResetPasswordFragment"
        android:label="ResetPasswordFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="sanchez.sanchez.sergio.agrociety.ui.features.intro.signup.SignupFragment"
        android:label="SignupFragment" />
    <fragment
        android:id="@+id/setLocationFragment"
        android:name="sanchez.sanchez.sergio.agrociety.ui.features.intro.location.SetLocationFragment"
        android:label="SetLocationFragment" />


</navigation>